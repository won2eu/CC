<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9">

    <!-- 상단 타이틀 -->
    <TextView
        android:id="@+id/tv_mbti2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Profile"
        android:textColor="#333333"
        android:textSize="23sp"
        android:textStyle="bold"
        android:gravity="center" />

    <!-- 스크롤 가능한 프로필 정보 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="90dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="180dp"
            android:layout_marginHorizontal="24dp"
            android:gravity="center_horizontal">

            <!-- 이름 / MBTI -->
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:textColor="#111111"
                android:textSize="27sp" />

            <TextView
                android:id="@+id/tv_mbti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:textColor="#333333"
                android:textSize="21sp" />

            <!-- 나머지 정보 -->
            <TextView
                android:id="@+id/tv_major"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="전공: "
                android:textColor="#333333"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_face_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="어떤 사람인가요?\n"
                android:textColor="#333333"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_compatibility"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:text="잘 맞을 확률: "
                android:textColor="#007AFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

    <!-- 고정된 하단 버튼 -->
    <Button
        android:id="@+id/btn_start_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="20dp"
        android:background="@drawable/button_backgound"
        android:elevation="4dp"
        android:paddingVertical="14dp"
        android:text="채팅 시작하기"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textStyle="bold" />
</FrameLayout>
